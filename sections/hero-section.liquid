{% comment %}
  Section Hero - Page d'accueil principale
{% endcomment %}

<section class="py-20 px-4 relative min-h-screen flex items-center overflow-hidden">
  <!-- Fond d√©grad√© anim√© -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50"></div>
    <div class="absolute top-0 left-0 w-full h-full opacity-30">
      <div class="absolute top-20 left-20 w-64 h-64 bg-gradient-to-br from-blue-400 to-purple-400 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-20 right-20 w-80 h-80 bg-gradient-to-br from-pink-400 to-blue-400 rounded-full blur-3xl animate-float" style="animation-delay: 1s;"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-gradient-to-br from-purple-300 to-pink-300 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
    </div>
  </div>

  <div class="container relative z-10">
    <div class="text-center">
      <!-- Badge Innovation -->
      <div class="inline-flex items-center gap-2 bg-white bg-opacity-60 backdrop-blur-sm px-4 py-2 rounded-full border border-white border-opacity-30 mb-8 animate-fade-in-up">
        <span class="text-blue-500">üíé</span>
        <span class="text-sm font-medium text-gray-700">
          {{ section.settings.innovation_badge | default: 'Innovation technologique ‚ö°' }}
        </span>
      </div>

      <!-- Titre principal -->
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight animate-fade-in-up" style="animation-delay: 0.2s;">
        <span class="gradient-text">{{ section.settings.hero_title_highlight | default: 'Contr√¥le tout' }}</span>
        <br>
        <span class="text-gray-800">{{ section.settings.hero_title_normal | default: "d'un simple geste !" }}</span>
      </h1>

      <!-- Sous-titre -->
      <p class="text-lg md:text-xl text-gray-600 mb-8 max-w-3xl mx-auto animate-fade-in-up" style="animation-delay: 0.4s;">
        {{ section.settings.hero_subtitle | default: 'La bague connect√©e qui r√©volutionne ton quotidien digital. Swipe, contr√¥le et capture sans jamais toucher ton √©cran üíç' }}
      </p>

      <!-- Image produit -->
      {% if section.settings.product_image %}
        <div class="mb-8 animate-fade-in-up" style="animation-delay: 0.6s;">
          <img 
            src="{{ section.settings.product_image | img_url: '600x400' }}" 
            alt="{{ section.settings.product_image.alt | default: 'Zen Ring - Bague connect√©e' }}"
            class="mx-auto rounded-3xl shadow-2xl max-w-md w-full animate-float"
          >
        </div>
      {% endif %}

      <!-- Prix et CTA -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-6 mb-8 animate-fade-in-up" style="animation-delay: 0.8s;">
        <!-- Prix -->
        <div class="text-center">
          {% if section.settings.original_price %}
            <div class="text-lg text-gray-500 line-through mb-1">{{ section.settings.original_price }}</div>
          {% endif %}
          <div class="text-4xl md:text-5xl font-bold text-gray-800">
            {{ section.settings.sale_price | default: '19‚Ç¨' }}
          </div>
          <div class="text-sm text-green-600 font-medium">
            {{ section.settings.shipping_note | default: 'Livraison gratuite üöö' }}
          </div>
        </div>

        <!-- Fl√®che -->
        <div class="hidden sm:block">
          <span class="text-3xl">‚Üí</span>
        </div>

        <!-- CTA Button -->
        <div>
          <a href="{{ section.settings.cta_url | default: '/products/zen-ring' }}" class="btn text-white font-bold py-4 px-8 rounded-full text-lg border-0 inline-flex items-center group shadow-2xl">
            {{ section.settings.cta_text | default: 'Commander maintenant ‚ö°' }}
            <span class="ml-3 group-hover:translate-x-1 transition-transform">‚Üí</span>
          </a>
        </div>
      </div>

      <!-- Garanties -->
      <div class="flex flex-wrap justify-center gap-4 text-sm text-gray-600 animate-fade-in-up" style="animation-delay: 1s;">
        {% for block in section.blocks %}
          {% if block.type == 'guarantee' %}
            <div class="flex items-center gap-2">
              <span class="text-green-500">{{ block.settings.icon | default: '‚úì' }}</span>
              <span>{{ block.settings.text }}</span>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

