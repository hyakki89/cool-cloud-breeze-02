{% comment %}
  Section Hero avec bague connectée
{% endcomment %}

<section class="hero">
  <div class="container mx-auto px-4 py-20 text-center">
    <h1 class="text-4xl md:text-6xl font-bold mb-6">
      {{ section.settings.title }}
    </h1>
    <p class="text-lg md:text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
      {{ section.settings.subtitle }}
    </p>
    
    {% if section.settings.show_product_image %}
      <div class="mb-8">
        <img 
          src="{{ section.settings.product_image | img_url: '400x400' }}" 
          alt="{{ section.settings.product_image.alt | default: 'Produit' }}"
          class="mx-auto rounded-lg shadow-lg max-w-sm w-full"
        >
      </div>
    {% endif %}

    {% if section.settings.show_cta %}
      <div class="flex flex-col sm:flex-row items-center justify-center gap-6">
        <div class="text-center">
          <div class="text-3xl md:text-4xl font-bold text-gray-800">
            {{ section.settings.price | default: '19€' }}
          </div>
          <div class="text-sm text-gray-600">{{ section.settings.price_note }}</div>
        </div>
        
        <a href="{{ section.settings.cta_url | default: '#' }}" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-4 px-8 rounded-full text-lg transition-colors">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Contrôle tout d'un simple geste !"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Sous-titre",
      "default": "La bague connectée qui révolutionne ton quotidien digital."
    },
    {
      "type": "checkbox",
      "id": "show_product_image",
      "label": "Afficher l'image produit",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Image du produit"
    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "label": "Afficher le bouton CTA",
      "default": true
    },
    {
      "type": "text",
      "id": "price",
      "label": "Prix",
      "default": "19€"
    },
    {
      "type": "text",
      "id": "price_note",
      "label": "Note prix",
      "default": "Livraison gratuite"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Texte du bouton",
      "default": "Commander maintenant"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "Lien du bouton"
    }
  ]
}
{% endschema %}