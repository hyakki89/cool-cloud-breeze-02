{% comment %}
  Footer - Pied de page
{% endcomment %}

<footer class="mt-16 bg-gradient-to-br from-gray-50 via-blue-50 to-purple-50 relative overflow-hidden">
  <!-- Fond décoratif -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-0 left-0 w-96 h-96 bg-gradient-to-br from-blue-400 to-purple-400 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-80 h-80 bg-gradient-to-br from-pink-400 to-blue-400 rounded-full blur-3xl"></div>
  </div>

  <div class="container relative z-10 py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
      
      <!-- Informations de l'entreprise -->
      <div class="md:col-span-2">
        <div class="flex items-center mb-4">
          {% if section.settings.footer_logo %}
            <img 
              src="{{ section.settings.footer_logo | img_url: '120x120' }}" 
              alt="{{ shop.name }}"
              class="h-10 w-auto mr-3"
            >
          {% endif %}
          <span class="text-2xl font-bold gradient-text">{{ shop.name }}</span>
        </div>
        
        <p class="text-gray-600 mb-6 max-w-md">
          {{ section.settings.footer_description | default: 'La bague connectée qui révolutionne votre quotidien digital. Innovation, style et technologie à portée de main.' }}
        </p>

        <!-- Réseaux sociaux -->
        <div class="flex space-x-4">
          {% if section.settings.social_facebook %}
            <a href="{{ section.settings.social_facebook }}" class="text-gray-600 hover:text-blue-600 transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          {% endif %}
          
          {% if section.settings.social_instagram %}
            <a href="{{ section.settings.social_instagram }}" class="text-gray-600 hover:text-pink-600 transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.348-1.051-2.348-2.348s1.051-2.348 2.348-2.348 2.348 1.051 2.348 2.348-1.051 2.348-2.348 2.348zm7.718 0c-1.297 0-2.348-1.051-2.348-2.348s1.051-2.348 2.348-2.348 2.348 1.051 2.348 2.348-1.051 2.348-2.348 2.348z"/>
              </svg>
            </a>
          {% endif %}
          
          {% if section.settings.social_tiktok %}
            <a href="{{ section.settings.social_tiktok }}" class="text-gray-600 hover:text-black transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>

      <!-- Liens utiles -->
      <div>
        <h4 class="font-semibold text-gray-800 mb-4">{{ section.settings.links_title | default: 'Liens utiles' }}</h4>
        <ul class="space-y-2">
          {% for link in linklists.footer.links %}
            <li>
              <a href="{{ link.url }}" class="text-gray-600 hover:text-blue-600 transition-colors">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-semibold text-gray-800 mb-4">{{ section.settings.contact_title | default: 'Contact' }}</h4>
        <ul class="space-y-2 text-gray-600">
          {% if section.settings.contact_email %}
            <li class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <a href="mailto:{{ section.settings.contact_email }}" class="hover:text-blue-600 transition-colors">
                {{ section.settings.contact_email }}
              </a>
            </li>
          {% endif %}
          
          {% if section.settings.contact_phone %}
            <li class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <a href="tel:{{ section.settings.contact_phone }}" class="hover:text-blue-600 transition-colors">
                {{ section.settings.contact_phone }}
              </a>
            </li>
          {% endif %}
          
          {% if section.settings.contact_address %}
            <li class="flex items-start">
              <svg class="w-4 h-4 mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span>{{ section.settings.contact_address }}</span>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>

    <!-- Ligne de séparation -->
    <div class="border-t border-gray-200 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-600 text-sm mb-4 md:mb-0">
          &copy; {{ 'now' | date: '%Y' }} {{ shop.name }} - {{ section.settings.copyright_text | default: 'Contrôle ton monde ⚡' }}
        </p>
        
        <div class="flex space-x-6 text-sm">
          <a href="{{ section.settings.privacy_url | default: '/pages/privacy-policy' }}" class="text-gray-600 hover:text-blue-600 transition-colors">
            {{ section.settings.privacy_text | default: 'Mentions légales' }}
          </a>
          <a href="{{ section.settings.terms_url | default: '/pages/terms-of-service' }}" class="text-gray-600 hover:text-blue-600 transition-colors">
            {{ section.settings.terms_text | default: 'CGV' }}
          </a>
          <a href="{{ section.settings.contact_url | default: '/pages/contact' }}" class="text-gray-600 hover:text-blue-600 transition-colors">
            {{ section.settings.contact_link_text | default: 'Contact' }}
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "textarea",
      "id": "footer_description",
      "label": "Footer Description",
      "default": "La bague connectée qui révolutionne votre quotidien digital. Innovation, style et technologie à portée de main."
    },
    {
      "type": "url",
      "id": "social_facebook",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "social_instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_tiktok",
      "label": "TikTok URL"
    },
    {
      "type": "text",
      "id": "links_title",
      "label": "Links Section Title",
      "default": "Liens utiles"
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Contact Section Title",
      "default": "Contact"
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "Contact Email"
    },
    {
      "type": "text",
      "id": "contact_phone",
      "label": "Contact Phone"
    },
    {
      "type": "textarea",
      "id": "contact_address",
      "label": "Contact Address"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Contrôle ton monde ⚡"
    },
    {
      "type": "url",
      "id": "privacy_url",
      "label": "Privacy Policy URL",
      "default": "/pages/privacy-policy"
    },
    {
      "type": "text",
      "id": "privacy_text",
      "label": "Privacy Policy Text",
      "default": "Mentions légales"
    },
    {
      "type": "url",
      "id": "terms_url",
      "label": "Terms of Service URL",
      "default": "/pages/terms-of-service"
    },
    {
      "type": "text",
      "id": "terms_text",
      "label": "Terms of Service Text",
      "default": "CGV"
    },
    {
      "type": "url",
      "id": "contact_url",
      "label": "Contact Page URL",
      "default": "/pages/contact"
    },
    {
      "type": "text",
      "id": "contact_link_text",
      "label": "Contact Link Text",
      "default": "Contact"
    }
  ]
}
{% endschema %}