{% comment %}
  Footer - Pied de page
{% endcomment %}

<footer class="bg-gray-900 text-white py-12">
  <div class="container">
    <div class="grid md:grid-cols-4 gap-8 mb-8">
      
      <!-- Logo et description -->
      <div class="md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          {% if section.settings.footer_logo %}
            <img 
              src="{{ section.settings.footer_logo | img_url: '120x120' }}" 
              alt="{{ shop.name }}"
              class="h-8 w-auto"
            >
          {% endif %}
          <span class="text-xl font-bold">{{ shop.name }}</span>
        </div>
        <p class="text-gray-400 mb-6 max-w-md">
          {{ section.settings.footer_description | default: 'La bague connectée qui révolutionne ton quotidien numérique. Contrôle tout d\'un simple geste.' }}
        </p>
        
        <!-- Réseaux sociaux -->
        <div class="flex space-x-4">
          {% if section.settings.social_facebook %}
            <a href="{{ section.settings.social_facebook }}" class="text-gray-400 hover:text-white transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          {% endif %}
          {% if section.settings.social_instagram %}
            <a href="{{ section.settings.social_instagram }}" class="text-gray-400 hover:text-white transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987s11.987-5.367 11.987-11.987C24.014 5.367 18.647.001 12.017.001zM8.449 16.988c-1.297 0-2.348-1.051-2.348-2.348s1.051-2.348 2.348-2.348 2.348 1.051 2.348 2.348-1.051 2.348-2.348 2.348zm7.718 0c-1.297 0-2.348-1.051-2.348-2.348s1.051-2.348 2.348-2.348 2.348 1.051 2.348 2.348-1.051 2.348-2.348 2.348z"/>
              </svg>
            </a>
          {% endif %}
          {% if section.settings.social_twitter %}
            <a href="{{ section.settings.social_twitter }}" class="text-gray-400 hover:text-white transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>

      <!-- Liens rapides -->
      <div>
        <h3 class="font-semibold text-lg mb-4">{{ section.settings.quick_links_title | default: 'Liens rapides' }}</h3>
        <ul class="space-y-2">
          <li><a href="{{ routes.root_url }}" class="text-gray-400 hover:text-white transition-colors">Accueil</a></li>
          <li><a href="{{ collections.all.url }}" class="text-gray-400 hover:text-white transition-colors">Produits</a></li>
          {% for link in linklists.footer.links %}
            <li><a href="{{ link.url }}" class="text-gray-400 hover:text-white transition-colors">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Support -->
      <div>
        <h3 class="font-semibold text-lg mb-4">{{ section.settings.support_title | default: 'Support' }}</h3>
        <ul class="space-y-2">
          {% for block in section.blocks %}
            {% if block.type == 'support_link' %}
              <li><a href="{{ block.settings.url }}" class="text-gray-400 hover:text-white transition-colors">{{ block.settings.title }}</a></li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>

    <!-- Informations légales -->
    <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-400 text-sm mb-4 md:mb-0">
        © {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text | default: 'Tous droits réservés.' }}
      </p>
      <div class="flex space-x-6 text-sm">
        {% for block in section.blocks %}
          {% if block.type == 'legal_link' %}
            <a href="{{ block.settings.url }}" class="text-gray-400 hover:text-white transition-colors">{{ block.settings.title }}</a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</footer>

