{% comment %}
  Section Témoignages
{% endcomment %}

<section class="py-20 px-4 relative overflow-hidden">
  <div class="container relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-5xl font-bold mb-6">
        {{ section.settings.title | default: 'Ce que disent nos clients' }}
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        {{ section.settings.subtitle | default: 'Plus de 2000 clients satisfaits nous font confiance' }}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {% for block in section.blocks %}
        <div class="card p-6 text-center">
          <div class="flex justify-center mb-4">
            {% for i in (1..5) %}
              <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
            {% endfor %}
          </div>
          <p class="text-gray-600 mb-6 italic">"{{ block.settings.content }}"</p>
          <div class="font-semibold">{{ block.settings.author }}</div>
          <div class="text-sm text-gray-500">{{ block.settings.location }}</div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Ce que disent nos clients"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Plus de 2000 clients satisfaits nous font confiance"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "content",
          "label": "Testimonial Content"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author Name"
        },
        {
          "type": "text",
          "id": "location",
          "label": "Location"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials Section",
      "blocks": [
        {
          "type": "testimonial",
          "settings": {
            "content": "Cette bague a changé ma façon d'utiliser mon téléphone ! Super pratique pour TikTok",
            "author": "Marie L.",
            "location": "Paris"
          }
        },
        {
          "type": "testimonial",
          "settings": {
            "content": "Design élégant et très fonctionnel. Je la recommande vivement !",
            "author": "Lucas M.",
            "location": "Lyon"
          }
        },
        {
          "type": "testimonial",
          "settings": {
            "content": "Parfait pour mes selfies et stories Instagram. Très satisfaite !",
            "author": "Sophie D.",
            "location": "Marseille"
          }
        }
      ]
    }
  ]
}
{% endschema %}