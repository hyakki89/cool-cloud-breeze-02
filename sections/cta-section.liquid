{% comment %}
  Section Call-to-Action finale
{% endcomment %}

<section class="py-20 px-4 relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50"></div>
  
  <div class="container text-center relative z-10">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-3xl md:text-5xl font-bold mb-6 gradient-text">
        {{ section.settings.title | default: 'Prêt à contrôler ton monde ?' }}
      </h2>
      
      <p class="text-lg text-gray-600 mb-8">
        {{ section.settings.subtitle | default: 'Rejoins les milliers de personnes qui ont déjà adopté la Zen Ring' }}
      </p>
      
      <div class="mb-8">
        <div class="text-4xl font-bold text-gray-800 mb-2">
          {% if section.settings.original_price %}
            <span class="text-lg text-gray-500 line-through mr-2">{{ section.settings.original_price }}</span>
          {% endif %}
          {{ section.settings.price | default: '19€' }}
        </div>
        <div class="text-red-600 font-semibold">{{ section.settings.urgency_text | default: '⏰ Plus que quelques heures !' }}</div>
      </div>
      
      <a href="{{ section.settings.cta_url | default: '/collections/all' }}" class="btn text-white font-bold py-4 px-8 rounded-full text-xl mb-6 inline-block">
        {{ section.settings.cta_text | default: 'Commander maintenant ⚡' }}
      </a>
      
      <div class="flex justify-center items-center space-x-6 text-sm text-gray-600">
        <div class="flex items-center">
          <span class="text-green-500 mr-1">✓</span>
          {{ section.settings.guarantee_1 | default: 'Livraison gratuite' }}
        </div>
        <div class="flex items-center">
          <span class="text-green-500 mr-1">✓</span>
          {{ section.settings.guarantee_2 | default: 'Satisfait ou remboursé' }}
        </div>
        <div class="flex items-center">
          <span class="text-green-500 mr-1">✓</span>
          {{ section.settings.guarantee_3 | default: 'Support client 7j/7' }}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "CTA Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Prêt à contrôler ton monde ?"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Rejoins les milliers de personnes qui ont déjà adopté la Zen Ring"
    },
    {
      "type": "text",
      "id": "price",
      "label": "Price",
      "default": "19€"
    },
    {
      "type": "text",
      "id": "original_price",
      "label": "Original Price",
      "default": "29€"
    },
    {
      "type": "text",
      "id": "urgency_text",
      "label": "Urgency Text",
      "default": "⏰ Plus que quelques heures !"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA URL",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Commander maintenant ⚡"
    },
    {
      "type": "text",
      "id": "guarantee_1",
      "label": "Guarantee 1",
      "default": "Livraison gratuite"
    },
    {
      "type": "text",
      "id": "guarantee_2",
      "label": "Guarantee 2",
      "default": "Satisfait ou remboursé"
    },
    {
      "type": "text",
      "id": "guarantee_3",
      "label": "Guarantee 3",
      "default": "Support client 7j/7"
    }
  ],
  "presets": [
    {
      "name": "CTA Section"
    }
  ]
}
{% endschema %}