{% comment %}
  Section Call-to-Action finale
{% endcomment %}

<section class="py-20 px-4 relative overflow-hidden">
  <!-- Fond d√©grad√© anim√© -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-100 via-purple-50 to-pink-100"></div>
    <div class="absolute top-0 left-0 w-full h-full opacity-20">
      <div class="absolute top-20 left-20 w-64 h-64 bg-gradient-to-br from-blue-400 to-purple-400 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-20 right-20 w-80 h-80 bg-gradient-to-br from-pink-400 to-blue-400 rounded-full blur-3xl animate-float" style="animation-delay: 1s;"></div>
    </div>
  </div>

  <div class="container relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Badge urgence -->
      <div class="inline-flex items-center gap-2 bg-red-100 px-4 py-2 rounded-full border border-red-200 mb-8 animate-fade-in-up">
        <span class="w-2 h-2 bg-red-500 rounded-full animate-pulse"></span>
        <span class="text-sm font-medium text-red-700">
          {{ section.settings.urgency_badge | default: 'Plus que quelques heures !' }}
        </span>
      </div>

      <!-- Titre principal -->
      <h2 class="text-3xl md:text-5xl lg:text-6xl font-bold mb-6 animate-fade-in-up" style="animation-delay: 0.2s;">
        <span class="gradient-text">{{ section.settings.cta_title_highlight | default: 'Pr√™t √† contr√¥ler' }}</span>
        <br>
        <span class="text-gray-800">{{ section.settings.cta_title_normal | default: 'ton monde ?' }}</span>
      </h2>

      <!-- Sous-titre -->
      <p class="text-lg md:text-xl text-gray-600 mb-8 max-w-2xl mx-auto animate-fade-in-up" style="animation-delay: 0.4s;">
        {{ section.settings.cta_subtitle | default: 'Rejoins les milliers de personnes qui ont d√©j√† adopt√© la Zen Ring' }}
      </p>

      <!-- Offre sp√©ciale -->
      <div class="bg-white bg-opacity-80 backdrop-blur-sm rounded-2xl p-8 mb-8 animate-fade-in-up" style="animation-delay: 0.6s;">
        <div class="flex flex-col sm:flex-row items-center justify-center gap-6">
          <!-- Prix -->
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-bold text-gray-800 mb-2">
              {% if section.settings.original_price %}
                <span class="text-xl text-gray-500 line-through mr-3">{{ section.settings.original_price }}</span>
              {% endif %}
              {{ section.settings.sale_price | default: '19‚Ç¨' }}
            </div>
            <div class="text-sm text-gray-600">
              {{ section.settings.price_note | default: 'Au lieu de 29‚Ç¨' }}
            </div>
          </div>

          <div class="hidden sm:block w-px h-16 bg-gray-300"></div>

          <!-- Avantages -->
          <div class="text-left">
            {% for block in section.blocks %}
              {% if block.type == 'guarantee' %}
                <div class="flex items-center gap-3 mb-2">
                  <span class="text-green-500 text-lg">‚úì</span>
                  <span class="text-gray-700">{{ block.settings.text }}</span>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>

      <!-- CTA Button -->
      <div class="animate-fade-in-up" style="animation-delay: 0.8s;">
        <a href="{{ section.settings.cta_url | default: '/products/zen-ring' }}" class="btn text-white font-bold py-4 px-12 rounded-full text-xl border-0 inline-flex items-center group shadow-2xl">
          {{ section.settings.cta_text | default: 'Commander maintenant ‚ö°' }}
          <span class="ml-3 group-hover:translate-x-1 transition-transform">‚Üí</span>
        </a>
        
        <p class="text-sm text-gray-600 mt-4">
          {{ section.settings.security_note | default: 'üîí Paiement 100% s√©curis√© ‚Ä¢ Livraison gratuite' }}
        </p>
      </div>
    </div>
  </div>
</section>

