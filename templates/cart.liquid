{% comment %}
  Template panier - Page du panier d'achat
{% endcomment %}

<div class="container py-8">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold gradient-text text-center mb-8">
      {{ 'sections.cart.title' | t }}
    </h1>

    {% if cart.items.size > 0 %}
      <form action="{{ routes.cart_url }}" method="post" novalidate class="cart">
        
        <!-- Articles du panier -->
        <div class="cart-items space-y-6 mb-8">
          {% for item in cart.items %}
            <div class="cart-item card p-6">
              <div class="grid grid-cols-1 md:grid-cols-4 gap-6 items-center">
                
                <!-- Image produit -->
                <div class="md:col-span-1">
                  {% if item.image %}
                    <img 
                      src="{{ item.image | img_url: '200x200' }}" 
                      alt="{{ item.image.alt | escape }}"
                      class="w-24 h-24 object-cover rounded-xl mx-auto md:mx-0"
                    >
                  {% else %}
                    <div class="w-24 h-24 bg-gray-200 rounded-xl flex items-center justify-center mx-auto md:mx-0">
                      <span class="text-gray-500 text-xs">{{ 'products.product.media.load_image' | t }}</span>
                    </div>
                  {% endif %}
                </div>

                <!-- D√©tails produit -->
                <div class="md:col-span-2 text-center md:text-left">
                  <h3 class="font-semibold text-lg mb-2">
                    <a href="{{ item.product.url }}" class="hover:text-blue-600 transition-colors">
                      {{ item.product.title }}
                    </a>
                  </h3>
                  
                  {% unless item.product.has_only_default_variant %}
                    <div class="text-sm text-gray-600 mb-2">
                      {% for option in item.options_with_values %}
                        <span>{{ option.name }}: {{ option.value }}</span>
                        {% unless forloop.last %} ‚Ä¢ {% endunless %}
                      {% endfor %}
                    </div>
                  {% endunless %}

                  <div class="price-info">
                    {% if item.original_price != item.final_price %}
                      <span class="text-gray-400 line-through text-sm mr-2">{{ item.original_price | money }}</span>
                    {% endif %}
                    <span class="text-xl font-bold gradient-text">{{ item.final_price | money }}</span>
                  </div>
                </div>

                <!-- Quantit√© et suppression -->
                <div class="md:col-span-1 flex flex-col items-center gap-4">
                  <div class="flex items-center gap-3">
                    <button 
                      type="button" 
                      class="quantity-button"
                      onclick="updateCartItem({{ forloop.index }}, {{ item.quantity | minus: 1 }})"
                      {% if item.quantity <= 1 %}disabled{% endif %}
                    >
                      -
                    </button>
                    <input 
                      type="number" 
                      name="updates[]" 
                      value="{{ item.quantity }}" 
                      min="0" 
                      class="w-16 text-center border rounded"
                      onchange="updateCart()"
                    >
                    <button 
                      type="button" 
                      class="quantity-button"
                      onclick="updateCartItem({{ forloop.index }}, {{ item.quantity | plus: 1 }})"
                    >
                      +
                    </button>
                  </div>
                  
                  <button 
                    type="button" 
                    class="text-red-500 hover:text-red-700 text-sm font-medium"
                    onclick="removeCartItem({{ forloop.index }})"
                  >
                    {{ 'sections.cart.remove' | t }}
                  </button>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        <!-- R√©sum√© du panier -->
        <div class="cart-summary">
          <div class="card p-6 max-w-md ml-auto">
            <h3 class="text-xl font-semibold mb-4">{{ 'sections.cart.subtotal' | t }}</h3>
            
            <!-- D√©tails des co√ªts -->
            <div class="space-y-3 mb-6">
              <div class="flex justify-between">
                <span>{{ 'sections.cart.subtotal' | t }}</span>
                <span class="font-semibold">{{ cart.total_price | money }}</span>
              </div>
              
              {% if cart.total_discount > 0 %}
                <div class="flex justify-between text-green-600">
                  <span>{{ 'sections.cart.savings' | t }}</span>
                  <span class="font-semibold">-{{ cart.total_discount | money }}</span>
                </div>
              {% endif %}
              
              <div class="border-t pt-3 flex justify-between text-xl font-bold">
                <span>{{ 'sections.cart.total' | t }}</span>
                <span class="gradient-text">{{ cart.total_price | money }}</span>
              </div>
            </div>

            <!-- Informations livraison -->
            <div class="bg-green-50 rounded-lg p-3 mb-6 text-center">
              <p class="text-green-700 font-semibold text-sm">
                üöö {{ 'sections.cart.free_shipping' | t: default: 'Livraison gratuite' }}
              </p>
            </div>

            <!-- Boutons d'action -->
            <div class="space-y-3">
              <button type="submit" name="update" class="btn w-full bg-gray-600 hover:bg-gray-700">
                {{ 'sections.cart.update' | t }}
              </button>
              
              <button type="submit" name="checkout" class="btn w-full">
                {{ 'sections.cart.checkout' | t }} ‚ö°
              </button>
            </div>

            <!-- Paiements accept√©s -->
            <div class="text-center mt-4">
              <p class="text-xs text-gray-600 mb-2">{{ 'sections.cart.accepted_payments' | t: default: 'Paiements accept√©s' }}</p>
              <div class="flex justify-center gap-2">
                <span class="text-xs bg-gray-100 px-2 py-1 rounded">üí≥ Visa</span>
                <span class="text-xs bg-gray-100 px-2 py-1 rounded">üí≥ Mastercard</span>
                <span class="text-xs bg-gray-100 px-2 py-1 rounded">üÖøÔ∏è PayPal</span>
              </div>
            </div>
          </div>
        </div>
      </form>

      <!-- Recommandations produits -->
      <div class="mt-16">
        <h3 class="text-2xl font-bold text-center mb-8">{{ 'sections.cart.recommendations' | t: default: 'Vous pourriez aussi aimer' }}</h3>
        <!-- Ici vous pouvez ajouter une section de produits recommand√©s -->
      </div>

    {% else %}
      <!-- Panier vide -->
      <div class="text-center py-12">
        <div class="max-w-md mx-auto">
          <div class="text-6xl mb-6">üõí</div>
          <h2 class="text-2xl font-semibold mb-4">{{ 'sections.cart.empty' | t }}</h2>
          <p class="text-gray-600 mb-8">{{ 'sections.cart.empty_text' | t: default: 'Votre panier est actuellement vide.' }}</p>
          <a href="{{ routes.all_products_collection_url }}" class="btn">
            {{ 'general.continue_shopping' | t }}
          </a>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<script>
  function updateCartItem(line, quantity) {
    const formData = new FormData();
    formData.append('line', line);
    formData.append('quantity', quantity);

    fetch('/cart/change.js', {
      method: 'POST',
      body: formData
    })
    .then(response => response.json())
    .then(data => {
      location.reload();
    })
    .catch(error => {
      console.error('Erreur:', error);
    });
  }

  function removeCartItem(line) {
    updateCartItem(line, 0);
  }

  function updateCart() {
    document.querySelector('.cart').submit();
  }
</script>

<style>
  .quantity-button {
    width: 2rem;
    height: 2rem;
    border: 1px solid var(--color-gray-300);
    border-radius: var(--border-radius);
    background: white;
    cursor: pointer;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .quantity-button:hover:not(:disabled) {
    background-color: var(--color-gray-100);
  }

  .quantity-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
</style>