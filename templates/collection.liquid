{% comment %}
  Template de collection - Liste des produits
{% endcomment %}

<div class="container py-8">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold gradient-text mb-4">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">{{ collection.description }}</p>
    {% endif %}
  </div>

  {% if collection.products.size > 0 %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for product in collection.products %}
        <div class="card p-6 group">
          <a href="{{ product.url }}" class="block">
            <!-- Image produit -->
            <div class="relative mb-4 overflow-hidden rounded-2xl">
              {% if product.featured_image %}
                <img 
                  src="{{ product.featured_image | img_url: '400x400' }}" 
                  alt="{{ product.featured_image.alt | escape }}"
                  class="w-full aspect-square object-cover group-hover:scale-105 transition-transform duration-300"
                >
              {% else %}
                <div class="w-full aspect-square bg-gray-200 flex items-center justify-center">
                  <span class="text-gray-500">{{ 'products.product.media.load_image' | t }}</span>
                </div>
              {% endif %}
              
              <!-- Badge promotion -->
              {% if product.compare_at_price > product.price %}
                <div class="absolute top-4 left-4 bg-red-500 text-white px-2 py-1 rounded-full text-sm font-bold">
                  -{{ product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price }}%
                </div>
              {% endif %}
            </div>

            <!-- Informations produit -->
            <h3 class="font-semibold text-lg mb-2 group-hover:text-blue-600 transition-colors">
              {{ product.title }}
            </h3>
            
            <div class="flex items-center justify-between">
              <div class="price-container">
                {% if product.compare_at_price > product.price %}
                  <span class="text-gray-400 line-through text-sm mr-2">{{ product.compare_at_price | money }}</span>
                {% endif %}
                <span class="text-xl font-bold gradient-text">{{ product.price | money }}</span>
              </div>
              
              <div class="flex text-yellow-400 text-sm">
                {% for i in (1..5) %}
                  <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                {% endfor %}
              </div>
            </div>

            <!-- Description courte -->
            {% if product.description != blank %}
              <p class="text-gray-600 text-sm mt-2 line-clamp-2">
                {{ product.description | strip_html | truncatewords: 15 }}
              </p>
            {% endif %}
          </a>

          <!-- Bouton d'ajout au panier -->
          <form action="/cart/add" method="post" enctype="multipart/form-data" class="mt-4">
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
            <button 
              type="submit" 
              class="btn w-full py-2 text-sm"
              {% unless product.available %}disabled{% endunless %}
            >
              {% if product.available %}
                {{ 'products.product.add_to_cart' | t }}
              {% else %}
                {{ 'products.product.sold_out' | t }}
              {% endif %}
            </button>
          </form>
        </div>
      {% endfor %}
    </div>

    {% comment %} Pagination {% endcomment %}
    {% if paginate.pages > 1 %}
      <div class="text-center mt-12">
        {{ paginate | default_pagination }}
      </div>
    {% endif %}

  {% else %}
    <div class="text-center py-12">
      <h2 class="text-2xl font-semibold mb-4">{{ 'collections.general.no_products' | t }}</h2>
      <p class="text-gray-600 mb-8">{{ 'collections.general.no_products_text' | t }}</p>
      <a href="{{ routes.all_products_collection_url }}" class="btn">
        {{ 'collections.general.browse_all' | t }}
      </a>
    </div>
  {% endif %}
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>