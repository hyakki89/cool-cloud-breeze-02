{% comment %}
  Compte client
{% endcomment %}

<div class="container py-8">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold mb-8">Mon compte</h1>
    
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Informations personnelles -->
      <div class="card p-6">
        <h2 class="text-xl font-semibold mb-4">Informations personnelles</h2>
        <div class="space-y-3">
          <div>
            <strong>Nom :</strong> {{ customer.first_name }} {{ customer.last_name }}
          </div>
          <div>
            <strong>Email :</strong> {{ customer.email }}
          </div>
        </div>
        <a href="{{ routes.account_addresses_url }}" class="btn mt-4">
          Gérer mes adresses
        </a>
      </div>
      
      <!-- Commandes récentes -->
      <div class="card p-6">
        <h2 class="text-xl font-semibold mb-4">Commandes récentes</h2>
        {% if customer.orders.size > 0 %}
          {% for order in customer.orders limit: 3 %}
            <div class="border-b pb-3 mb-3 last:border-b-0">
              <div class="flex justify-between items-center">
                <div>
                  <strong>Commande #{{ order.name }}</strong>
                  <div class="text-sm text-gray-600">{{ order.created_at | date: '%B %d, %Y' }}</div>
                </div>
                <div class="text-right">
                  <div class="font-semibold">{{ order.total_price | money }}</div>
                  <div class="text-sm text-gray-600">{{ order.financial_status }}</div>
                </div>
              </div>
            </div>
          {% endfor %}
          <a href="{{ routes.account_url }}/orders" class="text-blue-600 hover:underline">
            Voir toutes mes commandes
          </a>
        {% else %}
          <p class="text-gray-600">Aucune commande pour le moment.</p>
        {% endif %}
      </div>
    </div>
    
    <div class="text-center mt-8">
      <a href="{{ routes.account_logout_url }}" class="text-red-600 hover:underline">
        Se déconnecter
      </a>
    </div>
  </div>
</div>