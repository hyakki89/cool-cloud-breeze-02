{% comment %}
  Template blog
{% endcomment %}

<div class="container py-8">
  <h1 class="text-4xl font-bold gradient-text text-center mb-12">{{ blog.title }}</h1>
  
  {% if blog.articles.size > 0 %}
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for article in blog.articles %}
        <article class="card p-6">
          <a href="{{ article.url }}">
            {% if article.image %}
              <img 
                src="{{ article.image | img_url: '400x250' }}" 
                alt="{{ article.image.alt }}"
                class="w-full h-48 object-cover rounded-lg mb-4"
              >
            {% endif %}
            
            <h3 class="font-semibold text-lg mb-2">{{ article.title }}</h3>
            <p class="text-gray-600 text-sm mb-4">{{ article.excerpt | truncatewords: 20 }}</p>
            <div class="text-sm text-gray-500">{{ article.published_at | date: '%B %d, %Y' }}</div>
          </a>
        </article>
      {% endfor %}
    </div>
  {% else %}
    <div class="text-center py-12">
      <p class="text-gray-600">Aucun article pour le moment.</p>
    </div>
  {% endif %}
</div>