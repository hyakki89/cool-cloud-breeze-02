{
  "sections": {
    "product-header": {
      "type": "product-header",
      "settings": {
        "color_scheme": "background-1",
        "show_breadcrumbs": true,
        "show_vendor": false,
        "show_sku": true,
        "show_availability": true,
        "enable_sticky_add_to_cart": true,
        "show_dynamic_checkout": true,
        "padding_top": 40,
        "padding_bottom": 20
      }
    },
    "product-media": {
      "type": "product-media",
      "settings": {
        "color_scheme": "background-1",
        "enable_zoom": true,
        "enable_lightbox": true,
        "show_thumbnails": true,
        "thumbnail_position": "left",
        "media_size": "large",
        "padding_top": 20,
        "padding_bottom": 20
      }
    },
    "product-info": {
      "type": "product-info",
      "blocks": [
        {
          "type": "title",
          "settings": {}
        },
        {
          "type": "price",
          "settings": {
            "show_savings": true,
            "show_tax_info": true
          }
        },
        {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button",
            "show_quantity_selector": true
          }
        },
        {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": true
          }
        },
        {
          "type": "description",
          "settings": {}
        },
        {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Caractéristiques",
            "icon": "truck",
            "content": "<ul><li>Matériau premium</li><li>Design ergonomique</li><li>Garantie 2 ans</li></ul>",
            "page": ""
          }
        },
        {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Livraison & Retours",
            "icon": "return",
            "content": "<p>Livraison gratuite en France métropolitaine sous 48h. Retours gratuits sous 30 jours.</p>",
            "page": ""
          }
        }
      ],
      "settings": {
        "color_scheme": "background-1",
        "enable_sticky_info": false,
        "padding_top": 20,
        "padding_bottom": 40
      }
    },
    "product-recommendations": {
      "type": "product-recommendations",
      "settings": {
        "color_scheme": "background-1",
        "heading": "Vous pourriez aussi aimer",
        "products_to_show": 4,
        "columns_desktop": 4,
        "columns_mobile": "2",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": true,
        "padding_top": 80,
        "padding_bottom": 80
      }
    }
  },
  "order": [
    "product-header",
    "product-media", 
    "product-info",
    "product-recommendations"
  ]
}