{% comment %}
  Testimonials Section
{% endcomment %}

<style>
  .testimonials-section-{{ section.id }} {
    padding: 5rem 1rem;
    position: relative;
    background: linear-gradient(to bottom right, 
      {{ section.settings.background_start | default: '#f8fafc' }},
      {{ section.settings.background_middle | default: '#f0ffff' }},
      {{ section.settings.background_end | default: '#e6e6fa' }}
    );
  }

  .testimonials-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .testimonials-title {
    font-size: clamp(1.875rem, 6vw, 3rem);
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: #1f2937;
  }

  .gradient-text {
    background: linear-gradient(to right, 
      {{ section.settings.accent_color | default: '#87ceeb' }}, 
      #8b5cf6, 
      {{ section.settings.secondary_color | default: '#ffc0cb' }}
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .testimonials-description {
    font-size: 1.125rem;
    color: #6b7280;
    max-width: 32rem;
    margin: 0 auto;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .testimonial-card {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 10px 25px rgba(135, 206, 235, 0.1);
    border-radius: 24px;
    padding: 2rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .testimonial-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(135, 206, 235, 0.2);
  }

  .stars {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 1rem;
    color: #fbbf24;
    font-size: 1.125rem;
  }

  .testimonial-text {
    color: #374151;
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-style: italic;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .author-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(45deg, 
      {{ section.settings.accent_color | default: '#87ceeb' }}, 
      {{ section.settings.secondary_color | default: '#ffc0cb' }}
    );
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
  }

  .author-info {
    flex: 1;
  }

  .author-name {
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.25rem;
  }

  .author-location {
    font-size: 0.875rem;
    color: #6b7280;
  }

  .trust-indicators {
    text-align: center;
    padding: 2rem 0;
  }

  .trust-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
    margin-bottom: 1.5rem;
  }

  .trust-stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1f2937;
  }

  .stat-label {
    font-size: 0.875rem;
    color: #6b7280;
  }

  .trust-badges {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 50px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    font-size: 0.875rem;
    color: #374151;
  }

  @media (max-width: 768px) {
    .testimonials-grid {
      grid-template-columns: 1fr;
    }
    
    .trust-stats {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>

<section class="testimonials-section-{{ section.id }}">
  <div class="page-width">
    <div class="testimonials-header">
      <h2 class="testimonials-title">
        {{ section.settings.title_start }} <span class="gradient-text">{{ section.settings.title_highlight }}</span> {{ section.settings.title_end }}
      </h2>
      <p class="testimonials-description">
        {{ section.settings.description }}
      </p>
    </div>

    <!-- T√©moignages -->
    <div class="testimonials-grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'testimonial' -%}
            <div class="testimonial-card" {{ block.shopify_attributes }}>
              <div class="stars">
                {%- for i in (1..5) -%}
                  ‚≠ê
                {%- endfor -%}
              </div>
              <blockquote class="testimonial-text">
                "{{ block.settings.text }}"
              </blockquote>
              <div class="testimonial-author">
                <div class="author-avatar">
                  {{ block.settings.author_name | slice: 0 }}
                </div>
                <div class="author-info">
                  <div class="author-name">{{ block.settings.author_name }}</div>
                  <div class="author-location">{{ block.settings.author_location }}</div>
                </div>
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    <!-- Indicateurs de confiance -->
    {%- if section.settings.show_trust_indicators -%}
      <div class="trust-indicators">
        <div class="trust-stats">
          <div class="trust-stat">
            <div class="stat-number">{{ section.settings.reviews_count }}</div>
            <div class="stat-label">Avis clients</div>
          </div>
          <div class="trust-stat">
            <div class="stat-number">{{ section.settings.rating }}</div>
            <div class="stat-label">Note moyenne</div>
          </div>
          <div class="trust-stat">
            <div class="stat-number">{{ section.settings.satisfaction_rate }}</div>
            <div class="stat-label">Satisfaction</div>
          </div>
        </div>
        
        <div class="trust-badges">
          <div class="trust-badge">
            <span>‚úÖ</span>
            <span>Avis v√©rifi√©s</span>
          </div>
          <div class="trust-badge">
            <span>üèÜ</span>
            <span>Recommand√© par 96% des clients</span>
          </div>
          <div class="trust-badge">
            <span>üîí</span>
            <span>Paiement s√©curis√©</span>
          </div>
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

