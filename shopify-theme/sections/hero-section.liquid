{% comment %}
  Hero Section with Product
{% endcomment %}

<style>
  .hero-section-{{ section.id }} {
    background: linear-gradient(to bottom right, 
      {{ section.settings.background_start | default: '#f8fafc' }},
      {{ section.settings.background_middle | default: '#f0ffff' }},
      {{ section.settings.background_end | default: '#e6e6fa' }}
    );
    position: relative;
    overflow: hidden;
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 1rem;
  }

  .hero-clouds {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .cloud {
    position: absolute;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 50px;
    filter: blur(40px);
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }

  .hero-content {
    text-align: center;
    max-width: 64rem;
    position: relative;
    z-index: 10;
  }

  .product-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(10px);
    padding: 0.5rem 1rem;
    border-radius: 50px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    margin-bottom: 2rem;
    animation: fade-in-up 0.6s ease-out;
  }

  .badge-dot {
    width: 0.5rem;
    height: 0.5rem;
    background: {{ section.settings.accent_color | default: '#87ceeb' }};
    border-radius: 50%;
    animation: pulse-soft 2s infinite;
  }

  @keyframes pulse-soft {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
  }

  .hero-title {
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    font-weight: 700;
    margin-bottom: 1.5rem;
    animation: fade-in-up 0.6s ease-out 0.2s both;
  }

  .gradient-text {
    background: linear-gradient(to right, 
      {{ section.settings.accent_color | default: '#87ceeb' }}, 
      #8b5cf6, 
      {{ section.settings.secondary_color | default: '#ffc0cb' }}
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: clamp(1.125rem, 3vw, 1.25rem);
    color: #6b7280;
    margin-bottom: 2rem;
    max-width: 32rem;
    margin-left: auto;
    margin-right: auto;
    animation: fade-in-up 0.6s ease-out 0.4s both;
  }

  .product-image-container {
    position: relative;
    margin-bottom: 3rem;
    animation: fade-in-up 0.6s ease-out 0.6s both;
  }

  .product-image {
    width: clamp(16rem, 30vw, 24rem);
    height: auto;
    border-radius: 24px;
    box-shadow: 0 25px 50px rgba(135, 206, 235, 0.2);
    animation: float 6s ease-in-out infinite;
  }

  .pricing-cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
    animation: fade-in-up 0.6s ease-out 0.8s both;
  }

  .price-display {
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 0.25rem;
  }

  .old-price {
    font-size: 1.125rem;
    color: #6b7280;
    text-decoration: line-through;
    margin-right: 0.5rem;
  }

  .cta-button {
    background: linear-gradient(to right, 
      {{ section.settings.accent_color | default: '#87ceeb' }}, 
      {{ section.settings.secondary_color | default: '#ffc0cb' }}
    );
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 50px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(135, 206, 235, 0.3);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
  }

  .cta-button:hover {
    background: linear-gradient(to right, 
      {{ section.settings.secondary_color | default: '#ffc0cb' }}, 
      {{ section.settings.accent_color | default: '#87ceeb' }}
    );
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(135, 206, 235, 0.4);
  }

  .guarantees {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
    font-size: 0.875rem;
    color: #6b7280;
    animation: fade-in-up 0.6s ease-out 1s both;
  }

  .guarantee-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .check-icon {
    color: #10b981;
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .guarantees {
      flex-direction: column;
      align-items: center;
    }
  }
</style>

<section class="hero-section-{{ section.id }}">
  <!-- Nuages flottants en arri√®re-plan -->
  <div class="hero-clouds">
    <div class="cloud" style="top: 5rem; left: 2.5rem; width: 8rem; height: 4rem;"></div>
    <div class="cloud" style="top: 10rem; right: 5rem; width: 12rem; height: 6rem; animation-delay: 1s;"></div>
    <div class="cloud" style="bottom: 10rem; left: 25%; width: 10rem; height: 5rem; animation-delay: 2s;"></div>
  </div>

  <div class="page-width">
    <div class="hero-content">
      <!-- Badge "Nouveau Produit" -->
      {%- if section.settings.show_badge -%}
        <div class="product-badge">
          <span class="badge-dot"></span>
          <span class="badge-text">{{ section.settings.badge_text }}</span>
        </div>
      {%- endif -%}

      <!-- Accroche principale -->
      <h1 class="hero-title">
        <span class="gradient-text">{{ section.settings.title_highlight }}</span>
        <br>
        <span class="hero-subtitle">{{ section.settings.title_normal }}</span>
      </h1>

      <!-- Sous-titre -->
      <p class="hero-description">
        {{ section.settings.description }}
      </p>

      <!-- Image produit principale -->
      {%- if section.settings.product_image != blank -%}
        <div class="product-image-container">
          <div class="product-image-wrapper">
            <img
              src="{{ section.settings.product_image | image_url: width: 600 }}"
              alt="{{ section.settings.product_image.alt | escape }}"
              class="product-image"
              loading="lazy"
              width="{{ section.settings.product_image.width }}"
              height="{{ section.settings.product_image.height }}">
          </div>
        </div>
      {%- endif -%}

      <!-- Prix et CTA -->
      <div class="pricing-cta">
        <div class="pricing">
          <div class="price-display">
            {%- if section.settings.old_price != blank -%}
              <span class="old-price">{{ section.settings.old_price }}</span>
            {%- endif -%}
            <span class="current-price">{{ section.settings.current_price }}</span>
          </div>
          {%- if section.settings.shipping_info != blank -%}
            <div class="shipping-info">{{ section.settings.shipping_info }}</div>
          {%- endif -%}
        </div>
        
        <a href="{{ section.settings.cta_url | default: '/products/zen-ring' }}" class="cta-button">
          {{ section.settings.cta_text }}
          <span class="button-arrow">‚Üí</span>
        </a>
      </div>

      <!-- Garanties -->
      {%- if section.settings.show_guarantees -%}
        <div class="guarantees">
          {%- for guarantee in section.settings.guarantees -%}
            <div class="guarantee-item">
              <span class="check-icon">‚úì</span>
              {{ guarantee }}
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

