{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="hero-section color-{{ section.settings.color_scheme }} gradient">
  <!-- Nuages flottants en arri√®re-plan -->
  <div class="background-clouds">
    <div class="cloud cloud-1"></div>
    <div class="cloud cloud-2"></div>
    <div class="cloud cloud-3"></div>
  </div>

  <div class="page-width">
    <div class="hero-content">
      <!-- Badge "Nouveau Produit" -->
      {%- if section.settings.show_badge -%}
        <div class="product-badge">
          <span class="badge-dot"></span>
          <span class="badge-text">{{ section.settings.badge_text }}</span>
        </div>
      {%- endif -%}

      <!-- Accroche principale -->
      <h1 class="hero-title">
        <span class="gradient-text">{{ section.settings.title_highlight }}</span>
        <br>
        <span class="hero-subtitle">{{ section.settings.subtitle }}</span>
      </h1>

      <!-- Sous-titre -->
      <p class="hero-description">
        {{ section.settings.description }}
      </p>

      <!-- Image produit principale -->
      {%- if section.settings.product_image != blank -%}
        <div class="product-image-container">
          <div class="product-image-wrapper">
            {%- assign image_alt = section.settings.product_image.alt | default: section.settings.title_highlight -%}
            {{ section.settings.product_image | image_url: width: 600 | image_tag:
              class: 'product-image',
              alt: image_alt,
              loading: 'lazy'
            }}
            <div class="image-shine"></div>
          </div>
        </div>
      {%- endif -%}

      <!-- Prix et CTA -->
      <div class="pricing-cta">
        <div class="pricing">
          <div class="price-display">
            {%- if section.settings.old_price != blank -%}
              <span class="old-price">{{ section.settings.old_price }}</span>
            {%- endif -%}
            <span class="current-price">{{ section.settings.current_price }}</span>
          </div>
          {%- if section.settings.shipping_text != blank -%}
            <div class="shipping-info">{{ section.settings.shipping_text }}</div>
          {%- endif -%}
        </div>
        
        {%- if section.settings.cta_text != blank -%}
          <a href="{{ section.settings.cta_url | default: '#' }}" class="cta-button">
            {{ section.settings.cta_text }}
            <span class="button-arrow">‚Üí</span>
          </a>
        {%- endif -%}
      </div>

      <!-- Garanties -->
      {%- if section.settings.show_guarantees -%}
        <div class="guarantees">
          {%- if settings.show_shipping_guarantee -%}
            <div class="guarantee-item">
              <span class="check-icon">‚úì</span>
              {{ section.settings.guarantee_1 | default: 'Garantie 30 jours' }}
            </div>
          {%- endif -%}
          {%- if settings.show_secure_payment -%}
            <div class="guarantee-item">
              <span class="check-icon">‚úì</span>
              {{ section.settings.guarantee_2 | default: 'Paiement s√©curis√©' }}
            </div>
          {%- endif -%}
          {%- if settings.show_money_back -%}
            <div class="guarantee-item">
              <span class="check-icon">‚úì</span>
              {{ section.settings.guarantee_3 | default: 'Stock limit√©' }}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

