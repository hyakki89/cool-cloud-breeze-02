      "info": "t:sections.footer.settings.header__5.info"
    },
    {
      "type": "select",
      "id": "margin_top",
      "options": [
        {
          "value": "no-indent",
          "label": "t:sections.footer.settings.margin_top.options__1.label"
        },
        {
          "value": "small",
          "label": "t:sections.footer.settings.margin_top.options__2.label"
        },
        {
          "value": "medium",
          "label": "t:sections.footer.settings.margin_top.options__3.label"
        },
